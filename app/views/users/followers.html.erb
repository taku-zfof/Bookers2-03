<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2><%if @user==current_user%>
            Your info
          <%else%>
            User info
          <%end%></h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>


    <div class='col-md-8 offset-md-1'>
      <h2>Follower Users</h2>
      <table class='table'>
         <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
              <td><%= user.name %></td>
              <td>フォロー数:<%=user.follow_suru.count%></td>
              <td>フォロワー数:<%=user.follow_sareru.count%></td>
              <td><%= link_to 'Show', user %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>
</div>
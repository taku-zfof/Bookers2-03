<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>Created User</h2>
      <%= render 'users/info', user: @book.user%>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: Book.new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>

  		<div>
  		<%= render 'book_comments/comments', book: @book, book_comment: @book_comment, book_view_count: @book_view_count%>
  		</div>

  		<%= form_with model: [@book, @book_comment] ,local: false do |f| %>
      <div class="form-group">
        <%= f.text_area :comment,class: 'form-control book_title', rows: '5'%>
      </div>
      <%= f.submit "送信" %>
      <% end %>

    </div>
  </div>
</div>

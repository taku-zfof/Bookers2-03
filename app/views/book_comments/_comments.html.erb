<table class='table comments_index'>
<tr>
  <td><%= link_to(book.user) do %>
    <%= image_tag book.user.get_profile_image, size:"50x50" %><br>
    <%= book.user.name %>
    <% end %>
  </td>
  <td><%= link_to book.title, book %></td>
  <td><%= book.body %></td>

  <td class="favorite_<%=book.id%>"><%= render "favorites/favorites",book: book%></td>

  <td><p>コメント数：<%= book.book_comments.count %></p></td>

  <td><div id="postt_raty"></div>
       <script>
        var elem = document.querySelector('#postt_raty');
        var opt = {
          space: false,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          readOnly: true,
          score:<%=book.score%>
         };
        raty(elem,opt);
        </script>
  </td>
  <%if book.user==current_user%>
    <td><%= link_to 'Edit', edit_book_path(book), class: "btn btn-sm btn-success" %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
  <%end%>
</tr>

<%book.book_comments.each do|book_comment|%>
<tr>
  <td><%= link_to(book_comment.user) do %>
    <%= image_tag book_comment.user.get_profile_image, size:"80x80" %><br>
    <%= book_comment.user.name %>
    <%end%>
  </td>
  <td><%=book_comment.comment%></td>
  <td><%= link_to 'Destroy', book_book_comment_path(book,book_comment),remote: true,method: :delete, class: "btn btn-sm btn-danger"%></td>
</tr>
<%end%>

</table>


